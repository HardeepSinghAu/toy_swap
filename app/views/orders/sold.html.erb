<h1>Your Sales</h1>
<p>It feels good to get rid of excess clutter</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Buyer</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sold_items.each do |item| %>
      <tr>
        <td><%= item.listing.Title %></td>
        <td><%= item.listing.description %></td>
        <td><%= format_condition(item.listing.condition.capitalize) %></td>
        <td><%= number_to_currency(item.listing.price) %></td>
        <td><%= item.buyer.username.capitalize %></td>
        <td><%= item.listing.category.name %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>